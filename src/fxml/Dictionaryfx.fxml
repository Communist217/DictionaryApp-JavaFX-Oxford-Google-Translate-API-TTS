<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Control.ControlMain">
   <children>
      <TextArea fx:id="textArea" layoutX="498.0" layoutY="141.0" prefHeight="400.0" prefWidth="500.0" />
      <TextField fx:id="searchField" layoutY="82.0" onKeyReleased="#inputsearch" prefHeight="31.0" prefWidth="597.0" promptText="Input your word" />
      <ListView fx:id="listView" layoutX="1.0" layoutY="141.0" onKeyReleased="#deleteword" onMouseClicked="#clicked" onMousePressed="#inputsearch" prefHeight="400.0" prefWidth="500.0" />
      <HBox prefHeight="83.0" prefWidth="597.0">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                        <MenuItem mnemonicParsing="false" text="Thêm từ(Anh)">
                           <graphic>
                              <TextField fx:id="addField_Target" promptText="Add English Word" />
                           </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Thêm từ(Việt)">
                           <graphic>
                              <TextField fx:id="addField_Explain" onKeyReleased="#addup" promptText="Add Vietnamese Word" />
                           </graphic>
                        </MenuItem>
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label prefHeight="31.0" prefWidth="352.0" text="Dictionary" wrapText="true" />
         </children>
      </HBox>
      <Button fx:id="sua" layoutX="597.0" layoutY="82.0" mnemonicParsing="false" onMouseClicked="#Sua" prefHeight="31.0" prefWidth="56.0" text="Sủa" />
   </children>
</AnchorPane>
